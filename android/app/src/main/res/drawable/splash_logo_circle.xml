<?xml version="1.0" encoding="utf-8"?>
<!-- Circular frosted glass container for splash logo -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Frosted glass circle background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#80FFFFFF"/> <!-- Semi-transparent white for frosted effect -->
            <size android:width="160dp" android:height="160dp"/>
        </shape>
    </item>
    
    <!-- Logo inside the circle with padding -->
    <item 
        android:width="130dp" 
        android:height="130dp"
        android:gravity="center">
        <bitmap
            android:src="@drawable/splash_logo"
            android:gravity="center" />
    </item>
</layer-list>

